<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:textSize="32sp"/>

    <Button
        android:id="@+id/login_btn_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_btn_naver"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="구글로 로그인하기"/>

    <Button
        android:id="@+id/login_btn_naver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="16dp"
        android:text="네이버로 로그인하기"/>

    <Button
        android:id="@+id/login_btn_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn_naver"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="카카오로 로그인하기"/>

    <Button
        android:id="@+id/login_btn_nonlogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_btn_kakao"
        android:layout_centerHorizontal="true"
        android:text="로그인없이 둘러보기"/>

</RelativeLayout>